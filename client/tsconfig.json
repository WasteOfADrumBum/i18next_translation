{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*"
      ],
      "shared/types/*": [
        "shared/types/*"
      ],
      "@types/*": [
        "node_modules/@types/*"
      ]
    },
    "lib": [
      "es6",
      "dom",
      "es2017"
    ]
  }
}