{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "./",
    "lib": [
      "es6",
      "dom",
      "es2017" // Include padStart method
    ],
    "types": [
      "react-hook-form"
    ],
    "paths": {
      "*": [
        "src/*"
      ],
      "shared/types/*": [
        "shared/types/*"
      ]
    }
  }
}